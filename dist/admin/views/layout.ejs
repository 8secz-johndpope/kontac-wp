            margin-right: 10px;
            background: #ddd;
            border-radius: 5000px;
        }
        .indicator_toggle:before{
            content: '';
            display: table;
            height: 15px;
            width: 15px;
            background: #66d1d1;
            border-radius: 50%;
            margin-top: -2.5px;
            margin-left: -2.5px;
        }
        .indicator_toggle.dark:before{
            margin-left: 7.5px;
        }
    </style>
    <script>
    
    var css = {
        dark: '/assets/css/demo_2/style.css',
        light: '/assets/css/demo_1/style.css'
    }
    $('#toggleTheme').on('click', function(){
        $(this).toggleClass('dark')
        if($(this).hasClass('dark')){
            localStorage.theme = '2'
            link_css.href=css.dark
            $(logo).attr('src','/assets/images/logo-light.png');
            $.post('/set_theme',{theme:localStorage.theme})
        }else{
            localStorage.theme = '1'
            $(logo).attr('src','/assets/images/logo.png');
            link_css.href=css.light
            $.post('/set_theme',{theme:localStorage.theme})
        }
    })

